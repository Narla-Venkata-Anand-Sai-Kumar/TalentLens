# TalentLens Local Development Environment Configuration
# Copy this file to config/local.env and customize the values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_NAME=talentlens_dev
DB_USER=postgres
DB_PASSWORD=password
DB_HOST=host.docker.internal
DB_PORT=5433
DATABASE_URL=postgresql://postgres:password@host.docker.internal:5433/talentlens_dev

# =============================================================================
# DJANGO CONFIGURATION
# =============================================================================
SECRET_KEY=django-insecure-your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# =============================================================================
# AI CONFIGURATION
# =============================================================================
GEMINI_API_KEY=None

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False

# =============================================================================
# CORS SETTINGS
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001,http://127.0.0.1:3001,http://localhost:3002,http://127.0.0.1:3002

# =============================================================================
# UI APPLICATION CONFIGURATION
# =============================================================================
# API URLs for frontend applications
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# UI Application Ports
STUDENT_UI_PORT=3000
TEACHER_UI_PORT=3001
ADMIN_UI_PORT=3002

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to 'docker' to use Docker services, 'local' for local services
POSTGRES_MODE=local
REDIS_MODE=docker
UI_MODE=local

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=DEBUG

# Enable/disable Django debug toolbar
DJANGO_DEBUG_TOOLBAR=True
